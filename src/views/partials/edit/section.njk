<li id='{{key}}' class='section'>
    <div class='title'>
        <label for='{{key}}_name'>Name</label>
        <input id='{{key}}_name' name='[section][{{section_index}}][name]' type='text' value='{{section.name}}'>

        <span>
            <a href='#' class='delete' onclick="$('#{{key}}').remove();">âŠ—</a>
        </span>
    </div>

    <div class='elements'>
        {% asyncEach element in section.elements %}
            {% set element_index = loop.index0 %}
            {% set key = 'element_' + section_index + '_' + loop.index0 %}
            {% include 'partials/edit/element.njk' %}
        {% endeach %}
    </div>
    <div>
        <a href='#' class='add button' onclick="appendSectionElement('{{section_index}}');">Add element</a>
    </div>
</li>